{
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/twitter/test-utils.ts"],
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": ["jest"]
  }
}
